			ЗаполнитьЗначенияСвойств(СтрокаСотрудника, ДанныеСотрудника);
			СтрокаСотрудника.Сотрудник = ДанныеСотрудника;
		КонецЕсли;
	КонецЦикла;
	
КонецПроцедуры

