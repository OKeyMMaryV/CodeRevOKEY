
&НаСервере
Процедура ПриСозданииНаСервере(Отказ, СтандартнаяОбработка)
	
	Если Параметры.Свойство("СформированныеЗнРДС") Тогда
		
		СформированныеЗнРДС.Загрузить(Параметры.СформированныеЗнРДС.Выгрузить());
		
	КонецЕсли;
	
	СуммаДокументаИтог = СформированныеЗнРДС.Итог("СуммаДокумента");
	
КонецПроцедуры

&НаКлиенте
Процедура СформированныеЗнРДСВыбор(Элемент, ВыбраннаяСтрока, Поле, СтандартнаяОбработка)
	
	ИмяПоля = СтрЗаменить(НРег(Поле.Имя), НРег("СформированныеЗнРДС"),"");
	
	Попытка
		
		ДанныеСтроки = СформированныеЗнРДС.НайтиПоИдентификатору(ВыбраннаяСтрока);
		ПоказатьЗначение(, ДанныеСтроки[ИмяПоля]);
	
	Исключение
	КонецПопытки;
	
КонецПроцедуры
