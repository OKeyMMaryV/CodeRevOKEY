// BIT AMerkulov 07112014 ++
&НаСервере
Процедура ДобавитьКолонки()
	
	Колонка = Элементы.Добавить("бит_НомерAx", Тип("ПолеФормы"), Элементы.Список);
	Колонка.Заголовок = "Номер AX";
	Колонка.ПутьКДанным = "Список.бит_НомерAx";
	
КонецПроцедуры
