&НаКлиенте
Процедура ПослеЗаписи(ПараметрыЗаписи)
	
	// +СБ. Кузнецова С. 2014-09-06 
	Если (Объект.бит_ТипДоговора = ПредопределенноеЗначение("Справочник.бит_ТипыДоговоров.КредитыПолученные") Или Объект.бит_ТипДоговора = ПредопределенноеЗначение("Справочник.бит_ТипыДоговоров.ЗаймыПолученные"))
		И НЕ Запись_бит_ПроектДоговора Тогда
		ОК_ОбщегоНазначения.ЗаполнитьПроектДоговораПоДоговору(Объект.бит_ПроектДоговора, Объект.Ссылка);
		Запись_бит_ПроектДоговора=Истина;
		Записать();
		Запись_бит_ПроектДоговора=Ложь;
	КонецЕсли;
	// -СБ. Кузнецова С.
	
	Оповестить("Запись_ДоговорыКонтрагентов", ПараметрыЗаписи, Объект.Ссылка);
	
	Если СозданИзФормыДокумента Тогда
		ОповеститьОВыборе(Объект.Ссылка);
	КонецЕсли;
	
КонецПроцедуры

